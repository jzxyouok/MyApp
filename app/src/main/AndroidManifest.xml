<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.xlm.mydrawerdemo" >
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:name=".base.MyApplication"
        android:icon="@mipmap/icon_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity android:name=".Activity.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.NewArticle"
            android:windowSoftInputMode="adjustPan"
            ></activity>
        <activity android:name=".Activity.ChildArticleActivity"
            ></activity>
        <activity android:name=".Activity.ImageActivity"/>
        <activity android:name=".Activity.ChoseForumActivity"/>
        <activity android:name=".Activity.CoordingDemoActivity"/>
        <activity android:name=".Activity.SetActivity"/>
        <activity android:name=".Activity.CollectionActivity"/>
    </application>

</manifest>
